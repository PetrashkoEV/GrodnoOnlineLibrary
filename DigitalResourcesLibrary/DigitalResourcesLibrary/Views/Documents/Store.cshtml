@model DigitalResourcesLibrary.DataContext.Model.Documents.StoreModel
@{
    ViewBag.Title = "Store";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="posts">
    <h2 class="title">@Model.Title</h2>
    <div class="story">
        @Model.Description

        <div class="media-content">
            <video id="my_video_1" class="video-js vjs-default-skin" controls preload="none" width="auto" height="264"
                   data-setup="{}">
                <source src="@Url.Action("DownloadFile", "Files", new {id = 14, filename="video.mp4"})" type='video/mp4'>
                Video tag not supported. Download the video <a href="~/Content/themes/video.mp4">here</a>.
            </video>
            <br>
            <audio preload="none" controls>
                <source src="@Url.Action("DownloadFile", "Files", new {id = 19, filename="audio.mp3"})" />
                Audio tag not supported. Download the audio <a href="~/Content/themes/audio.mp3">here</a>.
            </audio>
            <br>
            @*<iframe src='@Url.Action("DownloadFile", "Files", new {id = 16, filename="document.pdf"})' 
                    width="100%" 
                    height="300px" 
                    frameborder="0">
            </iframe>*@
            <br>
            <iframe src='http://docs.google.com/gview?url=@ViewRes.Resource.Site_Domen@Url.Action("DownloadFile", "Files", new {id = 16, filename="document.pdf"})&embedded=true' 
                    width="100%" 
                    height="300px"
                    frameborder="0">
            </iframe>
        </div>
    </div>
</div>
@Html.Partial("Template/CategoriesTemplate")
<div style="clear: both;"></div>
