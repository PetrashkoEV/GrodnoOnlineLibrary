@using System.Configuration
@{
    var conString = ConfigurationManager.ConnectionStrings["LibDbSite"];
    var siteName = conString.ConnectionString;
}
<!DOCTYPE HTML PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <meta name="description" content="@ViewBag.Title" />
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />

    <title>@ViewBag.Title</title>
    @Scripts.Render("~/bundles/jquery")
    <link href="http://vjs.zencdn.net/4.5/video-js.css" rel="stylesheet" />
    <script src="http://vjs.zencdn.net/4.5/video.js"></script>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div id="wrapper">
        @Html.Partial("_Menu")
        <div id="header">
            <div class="header-site">@ViewRes.Resource.Site_Name_Header</div>
            <div class="body-site">@Html.Raw("&laquo;")@ViewRes.Resource.Site_Name_Body@Html.Raw("&raquo;")</div>
        </div>
        <div id="content">
            @RenderBody()
        </div>
    </div>

    <div id="footer">
        <script>
            (function (i, s, o, g, r, a, m) {
                i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                    (i[r].q = i[r].q || []).push(arguments)
                }, i[r].l = 1 * new Date(); a = s.createElement(o),
                m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
            })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');

            ga('create', 'UA-51861834-1', '@siteName');
            ga('send', 'pageview');

        </script>
        <p id="legal">@Html.Raw(ViewRes.Resource.Shared_Layout_Site_Copyright) @DateTime.Now.Year @ViewRes.Resource.Site_Name_Header</p>
        <p id="brand">@ViewRes.Resource.Site_Name</p>
    </div>

    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    @Scripts.Render("~/bundles/audioplayer")
    @Scripts.Render("~/bundles/treeselect")
    @Scripts.Render("~/bundles/resource")
    @Scripts.Render("~/bundles/loadpage")

    <script type="text/javascript">
        LoadPage();
    </script>
</body>
</html>
